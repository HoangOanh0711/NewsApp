<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocBao.docbao"
    android:background="@color/trang"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:background="@color/xanh3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="110dp"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_logo"
                />
            <TextView
                android:layout_marginRight="90dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/trang"
                android:textSize="32sp"
                android:text="iNewS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:background="@color/trang"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="610dp"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/rcv_docbao_docbao"
                    />
            </ScrollView>

        </LinearLayout>


        <LinearLayout
            android:background="@color/trang"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_outline_favorite_border_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageButton
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_chat_bubble_outline_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageButton
                android:layout_marginLeft="200dp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_turned_in_not_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView

                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="24sp"
                android:textColor="@color/den"
                android:textStyle="bold"
                android:text="A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_gravity="center"

                android:textSize="24sp"
                android:textColor="@color/den"
                android:textStyle="bold"
                android:text="a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>